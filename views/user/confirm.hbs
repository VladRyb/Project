<div id="container">
  <h2>Проверьте правильность ваших данных</h2>
  <form action="/user/confirm" name="loginForm" method="post">
    <div class="input">
      <label for="name">Имя пользователя
        <input type="text" name="name" id="name" value="{{user.name}}" required>
      </label>
    </div>
    <div class="input">
      <label for="phone">Номер телефона
        <input type="tel" name="phone" id="phone" pattern ="^[+][7][0-9]{10}$" value="{{user.phone}}" required>
      </label>
    </div>
    <div class="input">
      <label for="address">Адрес
        <input type="text" name="address" id="address" value="{{user.address}}" required>
      </label>
    </div>
    <div class="input">
      <label for="email">Адрес электронной почты
        <input type="text" name="email" id="email" value="{{user.email}}">
      </label>
    </div>
    <div class="input">
      <input type="submit" action="confirm/" name="loginbutton" id="loginbutton" value="Подтвердить">
    </div>

  </form>
</div>
