<div id="login-container" class="contain">
  <div id="login-form">
    <h2>Авторизация</h2>
    <form action="/user/login" id="login" name="loginForm" method="post">
      <div class="form-group">
        <div class="input">
          <label for="email">Email
            <input type="email" class="form-control" name="email" aria-describedby="emailHelp" id="email">
          </label>
        </div>
        <div class="input">
          <label for="password">Пароль
            <input type="password" class="form-control" name="password" id="password">
          </label>
        </div>
        <div class="input">
          <button type="submit" class="btn" name="loginbutton" id="loginbutton">Войти</button>
        </div>
        <div id="signup-link">
          <a href="/user/signup">Зарегистрироваться</a>
        </div>
        {{#if error}}
        <p>{{this.status}}</p>
        {{/if}}
      </div>
    </form>
  </div>
